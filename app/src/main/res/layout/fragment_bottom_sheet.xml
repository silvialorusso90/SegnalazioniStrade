<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Inserisci una segnalazione"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgIncidente"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/incidente" />

            <TextView
                android:id="@+id/txtIncidente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgIncidente"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Incidente" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/relativeLayout">

            <ImageView
                android:id="@+id/imgStradaChiusa"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/strada_chiusa" />

            <TextView
                android:id="@+id/txtStradaChiusa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgStradaChiusa"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Strada chiusa" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/relativeLayout2">

            <ImageView
                android:id="@+id/imgTraffico"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/traffico" />

            <TextView
                android:id="@+id/txtTraffico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgTraffico"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Traffico" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/relativeLayout3">

            <ImageView
                android:id="@+id/imgSos"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/sos" />

            <TextView
                android:id="@+id/txtSos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgSos"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="SOS" />
        </RelativeLayout>

    </RelativeLayout>

